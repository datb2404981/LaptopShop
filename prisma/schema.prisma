generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int     @id @default(autoincrement())
  username    String  @unique @db.VarChar(255)
  password    String? @db.VarChar(255)
  fullname    String  @db.VarChar(255)
  address     String? @db.VarChar(255)
  phone       String? @db.VarChar(255)
  accountType String  @db.VarChar(255)
  avatar      String? @db.VarChar(255)
  roleId      Int
  cart        Cart?
  orders      Order[]
  role        Role    @relation(fields: [roleId], references: [id])

  @@index([roleId], map: "users_roleId_fkey")
  @@map("users")
}

model Role {
  id          Int    @id @default(autoincrement())
  name        String @unique @db.VarChar(100)
  description String @db.VarChar(255)
  users       User[]

  @@map("roles")
}

model Order {
  id              Int           @id @default(autoincrement())
  userId          Int
  totalPrice      Int
  paymentMethod   String
  paymentRef      String?
  paymentStatus   String
  receiverAddress String        @db.VarChar(255)
  receiverName    String        @db.VarChar(255)
  receiverPhone   String        @db.VarChar(255)
  status          String        @default("PENDING")
  orderDate   DateTime      @default(now())
  orderdetail     OrderDetail[]
  user            User          @relation(fields: [userId], references: [id])

  @@index([userId], map: "idx_orders_userId")
  @@map("orders")
}

model Product {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(255)
  price       Int
  discount    Int?          @default(0)
  image       String?       @db.VarChar(255)
  detailDesc  String        @db.Text
  shortDesc   String        @db.VarChar(255)
  quantity    Int
  sold        Int?          @default(0)
  factory     String        @db.VarChar(255)
  target      String        @db.VarChar(255)
  cartdetails CartDetail[]
  orderdetail OrderDetail[]

  @@fulltext([name, shortDesc, detailDesc, factory, target])
  @@map("products")
}

model Cart {
  id          Int          @id @default(autoincrement())
  userId      Int          @unique
  sumProduct  Int          @default(0)
  user        User         @relation(fields: [userId], references: [id])
  cartDetails CartDetail[]

  @@map("cart")
}

model CartDetail {
  id        Int     @id @default(autoincrement())
  cartId    Int
  productId Int
  price     Int
  quantity  Int
  cart      Cart    @relation(fields: [cartId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([cartId], map: "cartdetails_cartId_fkey")
  @@index([productId], map: "cartdetails_productId_fkey")
  @@map("cartdetails")
}

model session {
  id        String   @id
  sid       String   @unique(map: "Session_sid_key")
  data      String   @db.MediumText
  expiresAt DateTime
}

model OrderDetail {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  price     Int
  quantity  Int
  orders    Order   @relation(fields: [orderId], references: [id], map: "OrderDetail_orderId_fkey")
  products  Product @relation(fields: [productId], references: [id], map: "OrderDetail_productId_fkey")

  @@index([orderId], map: "orderdetails_orderId_fkey")
  @@index([productId], map: "orderdetails_productId_fkey")
  @@map("orderdetail")
}
