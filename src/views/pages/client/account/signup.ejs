<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sign Up - LaptopShop</title>

  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">

  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #ffffff;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      margin: 0;
      padding: 2rem 0;
    }

    .signup-container {
      background: #fff;
      padding: 50px 40px;
      border-radius: 20px;
      box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
      width: 100%;
      max-width: 500px;
      text-align: center;
    }

    .signup-container h2 {
      margin-bottom: 8px;
      color: #2e7d32;
      font-weight: 700;
      font-size: 28px;
    }

    .signup-container p {
      color: #6c757d;
      margin-bottom: 25px;
      font-size: 14px;
    }

    .input-group-text {
      background-color: #e8f5e9;
      border-right: 0;
      color: #2e7d32;
    }

    .form-control {
      border-left: 0;
      border-radius: 0 10px 10px 0 !important;
    }

    .form-control.is-invalid {
        border-radius: 0 10px 10px 0 !important;
    }

    .toggle-password {
      color: #6c757d !important;
      background-color: #f8f9fa;
      cursor: pointer;
    }

    .btn-signup {
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      background: #2e7d32;
      color: #fff;
      font-size: 16px;
      font-weight: 600;
      border: none;
      transition: 0.3s ease;
      margin-top: 10px;
    }

    .btn-signup:hover {
      background: #1b5e20;
      transform: translateY(-2px);
    }

    .options {
      margin: 25px 0 15px;
      font-size: 14px;
      color: #6c757d;
      position: relative;
    }

    .options::before,
    .options::after {
      display: none;
    }


    .options::before {
      left: 0;
    }

    .options::after {
      right: 0;
    }
    .social-login .btn {
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: inline-flex;
      justify-content: center;
      align-items: center;
      margin: 0 7px;
      background-color: #f1f5f9;
      color: #212529;
      border: none;
      font-size: 16px;
      transition: all 0.3s ease;
    }

    .social-login .btn:hover {
      background-color: #e0e0e0;
      transform: scale(1.1);
    }
    
    .toggle-link {
      margin-top: 25px;
      font-size: 14px;
    }

    .toggle-link a {
      color: #2e7d32;
      text-decoration: none;
      font-weight: 600;
    }
    
    .invalid-feedback {
        text-align: left;
    }

  </style>
</head>

<body>
  <div class="signup-container">
    <h2>Create Account</h2>
    <p>Please fill in your details to sign up</p>

    <form id="signupForm" method="post" action="/signup">
      <!-- Full Name -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-user"></i></span>
          <input 
            type="text" 
            class="form-control <%= (typeof errors !== 'undefined' && errors.fullname) ? 'is-invalid' : '' %>" 
            placeholder="Full Name" 
            name="fullname" 
            value="<%= (typeof old !== 'undefined') ? old.fullname : '' %>"
          >
        </div>
        <% if (typeof errors !== 'undefined' && errors.fullname) { %>
          <div class="invalid-feedback d-block">
            <%= errors.fullname[0] %>
          </div>
        <% } %>
      </div>

      <!-- Email -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-envelope"></i></span>
          <input 
            type="email" 
            class="form-control <%= (typeof errors !== 'undefined' && errors.email) ? 'is-invalid' : '' %>" 
            placeholder="Email" 
            name="email" 
            value="<%= (typeof old !== 'undefined') ? old.email : '' %>"
          >
        </div>
        <% if (typeof errors !== 'undefined' && errors.email) { %>
          <div class="invalid-feedback d-block">
            <%= errors.email[0] %>
          </div>
        <% } %>
      </div>

      <!-- Password -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input 
            type="password" 
            class="form-control <%= (typeof errors !== 'undefined' && errors.password) ? 'is-invalid' : '' %>" 
            id="password" 
            name="password" 
            placeholder="Password"
          >
          <span class="input-group-text toggle-password" onclick="togglePassword('password', this)">
            <i class="fas fa-eye"></i>
          </span>
        </div>
        <% if (typeof errors !== 'undefined' && errors.password) { %>
          <div class="invalid-feedback d-block">
            <%= errors.password[0] %>
          </div>
        <% } %>
      </div>

      <!-- Confirm Password -->
      <div class="mb-3">
        <div class="input-group">
          <span class="input-group-text"><i class="fas fa-lock"></i></span>
          <input 
            type="password" 
            class="form-control <%= (typeof errors !== 'undefined' && errors.confirmPassword) ? 'is-invalid' : '' %>" 
            id="confirmPassword" 
            name="confirmPassword" 
            placeholder="Confirm Password"
          >
          <span class="input-group-text toggle-password" onclick="togglePassword('confirmPassword', this)">
            <i class="fas fa-eye"></i>
          </span>
        </div>
        <% if (typeof errors !== 'undefined' && errors.confirmPassword) { %>
          <div class="invalid-feedback d-block">
            <%= errors.confirmPassword[0] %>
          </div>
        <% } %>
      </div>

      <!-- Button -->
      <button type="submit" class="btn btn-signup">Sign Up</button>
    </form>
    
    <div class="options">or sign up with</div>
    
    <div class="social-login">
      <a href="/auth/google" class="btn"><i class="fab fa-google"></i></a>
      <button class="btn"><i class="fab fa-facebook-f"></i></button>
      <button class="btn"><i class="fab fa-apple"></i></button>
    </div>
    
    <div class="toggle-link">
      Already have an account? <a href="/login">Log in</a>
    </div>
  </div>

  <!-- Bootstrap Bundle JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function togglePassword(fieldId, el) {
      const input = document.getElementById(fieldId);
      const icon = el.querySelector("i");
      if (input.type === "password") {
        input.type = "text";
        icon.classList.remove("fa-eye");
        icon.classList.add("fa-eye-slash");
      } else {
        input.type = "password";
        icon.classList.remove("fa-eye-slash");
        icon.classList.add("fa-eye");
      }
    }
  </script>
</body>

</html>