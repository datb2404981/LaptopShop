</div>


  <!-- JavaScript -->
  <script>
  function updateSummary() {
    let totalPriceProduct = 0;
    let totalDiscountProduct = 0;

    document.querySelectorAll(".cart-item").forEach(item => {
      const qty = parseInt(item.querySelector("input").value);
      const price = parseInt(item.dataset.price);        // gi√° g·ªëc
      const discount = parseInt(item.dataset.discount);  // gi·∫£m gi√° m·ªói sp

      const itemTotal = price * qty;
      const itemDiscount = discount * qty;

      // c·ªông d·ªìn
      totalPriceProduct += itemTotal;
      totalDiscountProduct += itemDiscount;

      // c·∫≠p nh·∫≠t gi√° hi·ªÉn th·ªã cho t·ª´ng item
      item.querySelector(".item-price h3").textContent = 
        new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(itemTotal - itemDiscount);

      item.querySelector(".item-price p").textContent =
        new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(price);
    });

    // c·∫≠p nh·∫≠t summary box
    document.querySelector(".summary-row span:last-child").textContent =
      new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(totalPriceProduct);

    document.querySelector(".summary-row .discount").textContent =
      new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(totalDiscountProduct);

    document.querySelector(".summary-total span:last-child").textContent =
      new Intl.NumberFormat('vi-VN', {style: 'currency', currency: 'VND'}).format(totalPriceProduct - totalDiscountProduct);
  }

  // X·ª≠ l√Ω khi tƒÉng gi·∫£m
  document.querySelectorAll(".cart-item").forEach(item => {
    const minusBtn = item.querySelector(".qty-btn.minus");
    const plusBtn = item.querySelector(".qty-btn.plus");
    const input = item.querySelector("input");

    minusBtn.addEventListener("click", () => {
      let val = parseInt(input.value);
      if (val > 1) {
        input.value = val - 1;
        updateSummary();
      }
    });

    plusBtn.addEventListener("click", () => {
      let val = parseInt(input.value);
      input.value = val + 1;
      updateSummary();
    });
  });

  // ch·∫°y l·∫ßn ƒë·∫ßu
  updateSummary();
</script>

