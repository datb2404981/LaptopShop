<body>
  <!-- Breadcrumb -->
  <div class="mb-3">
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page">Order Details</li>
      </ol>
    </nav>
  </div>

  <div class="cart-page">
  <!-- Left side - My Cart -->
  <div class="cart-container">
    <h2>Order Details</h2>

    <% if(cartdetail.length === 0) { %>
      <p style="text-align:center; padding: 30px; color: gray;">
        üõí Ch∆∞a c√≥ s·∫£n ph·∫©m trong gi·ªè h√†ng
      </p>
    <% } else { %>
      <% cartdetail.forEach(function(item){ %>
        <div class="cart-item" 
            data-price="<%= item.product.price %>" 
            data-discount="<%= item.product.discount || 0 %>">
          <a href="/product/<%= item.product.id %>">
            <img src="/images/product/<%= item.product.image %>" alt="<%= item.product.name %>">
          </a>
          <div class="item-details">
            <a href="/product/<%= item.product.id %>" style="text-decoration: none; color: inherit;">
              <h3><%= item.product.name%></h3>
            </a>
            <p><%= item.product.shortDesc%></p>
          </div>
          <div class="item-actions">
            <input type="text" value="<%= item.quantity%>" readonly>
          </div>
          <div class="item-price">
            <h3>
              <%= new Intl.NumberFormat('vi-VN', {style: 'currency' , currency: 'VND' }).format(item.product.price * item.quantity) %>
            </h3>
            <p>
              <%= new Intl.NumberFormat('vi-VN', {style: 'currency' , currency: 'VND' }).format(item.product.price) %>
            </p>
          </div>
        </div>
      <% }); %>
    <% } %>
    <div class="bill-info mt-4 p-3 border rounded">
      <h5 class="mb-3">Billing Information</h5>
      <p><strong>Buyer:</strong> <%= user.fullname %></p>
      <p><strong>Email:</strong> <%= user.username %></p>
      <p><strong>Payment Method:</strong> Cash on Delivery</p>
    </div>

  </div>

  <!-- Right side - Checkout Info + Payment Summary -->
