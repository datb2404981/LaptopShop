                <!-- Menu items -->
                <li>
                  <a class="dropdown-item d-flex align-items-center gap-2" href="#">
                    <i class="fas fa-user-cog text-success"></i> Quản lý tài khoản
                  </a>
                </li>
                <li>
                  <a class="dropdown-item d-flex align-items-center gap-2" href="/order-history">
                    <i class="fas fa-history text-success"></i> Lịch sử mua hàng
