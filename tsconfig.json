{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,

    "outDir": "dist",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "config/*": ["src/config/*"],
      "controllers/*": ["src/controllers/*"],
      "models/*": ["src/models/*"],
      "routers/*": ["src/routers/*"],
      "services/*": ["src/services/*"],
      "middleware/*": ["src/middleware/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
